#content
  min-height 550px
  overflow hidden // comment：此处很重要，当子元素浮动时，父元素高度会塌陷，此时给父元素设置‘overflow： hidden’可解决该问题
.margin-right
  margin-right 15px

.title
  font-size 18px
  font-weight: bold

/* 面包屑 */
div.bread-nav
  margin 15px 0
  text-align: left
  font-size 14px
  color #1f1f1f
  &:last-child
    color #38C3F4

/* 侧边栏 */
.left-nav
  float left
  width 20%
  padding-bottom 200px
  background: #f5f5f5;
  background-size 100%

.left-nav .title
  padding 10px
  line-height 30px
  text-align center
  color #fff
  background-color #38C3F4

.left-nav .navSub-list li
  display block
  height 50px
  line-height 50px
  font-size 16px
  text-align center
  cursor pointer

.left-nav .navSub-list li.active
  color #38C3F4

.active-nav
  color #38C3F4
  font-weight: bold;
  opacity: 1;
/* 详情 */
.detail
  float left
  width 80%
  padding-left 40px
  box-sizing border-box
  padding-bottom 40px
  .title
    font-size 22px
    color #1f1f1f
    margin-bottom 20px
    text-align center
  p
    text-indent 2em
    text-align: justify
  img
    width 690px
    height: auto
    margin-top 30px
.description
  word-break break-all
  line-height 30px


