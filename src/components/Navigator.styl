/* 导航 */
.nav
  display inline-block
  width 100%
  color #fff
  vertical-align middle

.nav .container
  overflow visible

.nav img
  float left
  max-width 80px
  height 65px
  margin-right 70px
  cursor pointer
  overflow hidden

.nav .nav-bgcolor
  position absolute
  width 100%
  height: 65px
  top 0
  background: #00AAE7
  z-index -1

.nav .nav-list
  height 65px
  // background-color #00AAE7
  overflow visible

li
  cursor pointer
.nav .nav-list li.nav-parent
  position relative
  float left
  width 105px
  // height 65px
  line-height 65px
  text-align center

.nav .nav-list li i
  display block
  width 100%
  height 100%
  font-size 16px
  color #fff
  white-space nowrap
  cursor pointer
  transition all 0.2s

.nav .nav-list li.active-nav
  background-color #38C3F4
  font-weight: bold;
  opacity: 1;

.nav .nav-list li:hover
  background-color #38C3F4

.nav .nav-list li .nav-list-child
  position absolute
  width auto
  min-width 100%
  max-height 0
  overflow hidden
  z-index 999

.nav .nav-list li:hover .nav-list-child
  max-height 500px
  transition all 0.8s

.nav .nav-list li .nav-list-child li
  width 105px
  padding 0
  text-align center
  box-sizing border-box
  background-color #38C3F4

.nav .nav-list li .nav-list-child li i
  border-top 1px solid #04B5F4
  box-sizing border-box
  color #016FB5
  &:hover
    color white

